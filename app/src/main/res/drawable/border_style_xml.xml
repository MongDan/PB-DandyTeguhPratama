<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Warna latar belakang -->
    <solid android:color="#FFFFFF"/>

    <!-- Border (Stroke) -->
    <stroke
        android:width="3dp"
        android:color="@color/gray_200"/> <!-- Ganti warna sesuai kebutuhan -->

    <!-- Sudut radius untuk border -->
    <corners android:radius="10dp"/> <!-- Ganti radius untuk bentuk yang lebih bulat -->

    <!-- Padding jika diperlukan -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"/>
</shape>
